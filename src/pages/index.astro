---
import Layout from "../layouts/Layout.astro";
import About from "../components/About.astro";
import Skills from "../components/Skills.astro";
import Tools from "../components/Tools.astro";
import Wrapper from "../components/Wrapper.astro";
import WorkSamples from "../components/WorkSamples.astro";
import Expertise from "../components/Expertise.astro";
import Achievements from "../components/Achievements.astro";

const wrapped = [About, Skills, Tools, WorkSamples, Expertise, Achievements];
---

<Layout>
  {
    wrapped.map((WrappedComponent) => (
      <Wrapper>
        <WrappedComponent />
      </Wrapper>
    ))
  }
</Layout>
